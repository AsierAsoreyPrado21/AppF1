<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tituloDetallePiloto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle del Piloto"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/imagenDetalleEquipo"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/verstappen"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/titulo_nombreDetallePiloto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del piloto:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="20dp"/>
    <TextView
        android:id="@+id/nombreDetallePiloto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_nacionDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nacionalidad:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/nacionDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titulo_nacionDetallePiloto"
            android:paddingTop="30dp"
            android:layout_marginLeft="50dp"

            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_dorsalDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dorsal:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/dorsalDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titulo_dorsalDetallePiloto"
            android:paddingTop="30dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textSize="20dp"
             />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_victoriasDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numero de victorias:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/victoriasDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titulo_victoriasDetallePiloto"
            android:paddingTop="30dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textSize="20dp"
             />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/titulo_titulosDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Campeonatos del mundo:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="left"
            android:layout_marginLeft="30dp"
            android:paddingTop="30dp"/>

        <TextView
            android:id="@+id/titulosDetallePiloto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/titulo_titulosDetallePiloto"
            android:paddingTop="30dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RelativeLayout>


</LinearLayout>