<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tituloDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de la escuderia"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/imagenDetalleEquipo"
        android:layout_width="220dp"
        android:layout_height="150dp"
        android:src="@drawable/redbull"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/titulo_nombreDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre de la escuderia:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/nombreDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>

    <TextView
        android:id="@+id/titulo_nacionDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nacionalidad de la escuderia:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/nacionDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/titulo_titulosDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Campeonatos de contructores:"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>
    <TextView
        android:id="@+id/titulosDetalleEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="30dp"/>

</LinearLayout>